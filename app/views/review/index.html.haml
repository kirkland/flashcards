%h1.index_title  Review
#quiz_index
  - @decks.each do |deck|
    .deck
      .title=deck.title
      .card_count="#{deck.cards.count} Cards"
      .side
        %a{:href => review_path(deck.id)}
          %div="#{deck.front_description} -> #{deck.back_description}"
      .side
        %a{:href => review_path(deck.id, :show => 'back')}
          %div="#{deck.back_description} -> #{deck.front_description}"
.clear
