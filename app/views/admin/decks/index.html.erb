<h1>Listing decks</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.title %></td>
    <td><%= link_to 'Show', admin_deck_path(deck) %></td>
    <td><%= link_to 'Edit', edit_admin_deck_path(deck) %></td>
    <td><%= link_to 'Destroy', admin_deck_path(deck), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

