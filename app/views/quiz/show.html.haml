#site_nav{:style => "display:none"}
  Game Over:
  =link_to "Back to Decks", quiz_index_path 
  |
  =link_to "Repeat This Deck", new_quiz_path(:deck_id => @quiz.deck.id)
#font-adjuster
  %p 
    Text Size:
    =link_to_function "Bigger", "adjust_font(5)"
    |
    =link_to_function "Smaller", "adjust_font(-5)"
#quiz_status
  Good Luck!
#quiz_nav
  #reveal_card_link
    =link_to_function "Show Back", "quiz.reveal_back()"
#correct_links_area{:style => "display:none"}
  %p{:style => "text-align: center"}  Were you correct?
  #correct_links
    %p
      =link_to_function "Yes", "quiz.answered_correctly()"
      =link_to_function "No", "quiz.answered_wrong()"
#card_front{:class => "card"}
  #card_front_value.card_value
#card_back{:class => "card"}
  #card_back_value.card_value
%p= link_to 'Back to Decks', quiz_index_path
- content_for :js do
  quiz = new Quiz({
  back_path: "#{card_back_quiz_path(@quiz.id)}",
  next_path: "#{next_card_quiz_path(@quiz.id)}"
  });
